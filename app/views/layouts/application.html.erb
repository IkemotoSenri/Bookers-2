<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
   <header class="shadow-sm bg-dark">
    <nav class="navbar navbar-expand-md navbar-dark">
     <div class="container-md ">
       <nav class='nav navbar-nav navbar-left' >
        <h5><%= link_to 'Bookers', root_path, class:"text-white"%></h5>
       </nav>
       <nav class="navbar navbar-right">
        <% if user_signed_in? %>

        <h6>
         <i class="fas fa-home" style="color:white; mx-2"></i><%= link_to "Home", user_path(current_user.id) , class:"text-white mx-2" %>
         <i class="fas fa-users" style="color:white; mx-2"></i><%= link_to "Users", users_path, class:"text-white mx-2" %>
         <i class="fas fa-book-open" style="color:white; mx-2"></i> <%= link_to " Books", books_path, class:"text-white mx-2" %>
         <i class="fas fa-sign-out-alt" style="color:white; mx-2"></i><%= link_to " logout", destroy_user_session_path, method: :delete , class:"text-white mx-2" %>
        </h6>
        <% else %>
        <h6>
         <i class="fas fa-home" style="color:white; mx-2"></i><%= link_to "Homes", root_path, class:"text-white mx-2" %>
         <i class="fas fa-link" style="color:white; mx-2"></i><%= link_to "About", about_path, class:"text-white mx-2" %>
         <i class="fas fa-user-plus" style="color:white; mx-2"></i><%= link_to "sign up", new_user_registration_path, class:"text-white mx-2" %>
         <i class="fas fa-sign-in-alt" style="color:white; mx-2"></i> <%= link_to "login", new_user_session_path, class:"text-white mx-2" %>
        </h6>
       </nav>
      </div>
       <% end %>
     </nav>
    </div>
   </header>
       <div class="success"><%= notice %></div>
        <%= yield %>

         <div class='container'>
           <p class="text-center">
            CopyRight Infratop.inc
           </p>
         </div>
  </body>
</html>
