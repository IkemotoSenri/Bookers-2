
<div class="user_info mt-4">
 <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.jpg" %></br>
 <table class="table">
  <tbody>
   <tr>
    <th><h6>Name</h6></th>
    <td><h6><%= user.name %></h6></td>
   </tr>
   <tr>
    <th><h6>Introduction</h6></th>
    <td><h6><%= user.introduction %></h6></td>
   </tr>
  </tbody>
 </table>
</div>
 <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block mt-2"  do %>
  <span class="fas fa-user-cog"></span>
 <% end %>

<div class="new_book mt-3">
 <h2>New book</h2>
  <%= form_with model:book, local:true do |f| %>

 <h6>Title</h6>
  <%= f.text_field :title, class: "form-control" %>
 <h6 class="mt-3">Opinion</h6>
  <%= f.text_area :body, class: "form-control" %>

 <br><%= f.submit 'Create Book', class: "mt-3 btn btn-success"  %></br>
  <% end %>
</div>
