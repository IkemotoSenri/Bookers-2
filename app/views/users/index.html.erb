 <% @book.errors.full_messages.each do |message| %>
  <li class="error_message"><%= message %></li>
  <% end %>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/list', user:@user, book:@book %>
  </div>

  <div class="col-md-8 offset-md-1 mt-4">
   <h2>Users</h2>
    <table class= "table">
 　　 <thead>
  　　  <tr>
     　 <th class = "users_index_text">image</th>
     　<th class = "users_index_text">name</th>
    　</tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
         <td class = "users_index_image"><%= attachment_image_tag user, :profile_image, size: '40x40', fallback: "no_image.jpg" %></td>
         <td class = "users_index_name"><%= user.name %></td>
         <td class = "users_index_show"><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>